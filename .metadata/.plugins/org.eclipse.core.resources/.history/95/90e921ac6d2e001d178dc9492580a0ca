package complex_Logical_Program;

public class AddTwoArraySimpleMethod {

	public static void main(String[] args) {
		
		int a[]= {2,4,6,7};
		
		int b[]= {1,3,5};
		
		int length=a.length;
		
		if(a.length<b.length) {
			length=b.length;
		}
		for(int i=0;i<length;i++) {
			
			System.out.println(a[i]+b[i]);
			
		}
		
	}

}
